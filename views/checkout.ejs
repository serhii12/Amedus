<!DOCTYPE html>
<html lang="en">
<% include partials/_head %>

<body>
  <main class="cart">
    <section class="wrapper">
      <h1>Cart</h1>
      <% if(cartItems) {%>
      <%cartItems.forEach( dish  => { %>
      <li class="menu__item">
        <a href='#' class="myLink">
          <i class='fa fa-times-circle'></i>
        </a>
        <div class="menu__item__heading">
          <h2 class="menu__item-title">
            <%= dish.name %>
          </h2>
          <span class="menu__item-price">
            $
            <%= dish.price / 100 %>
          </span>
        </div>
        <p class="menu__item-description">
          <%= dish.description %>
        </p>
      </li>
      <%}) %>
      <% } else{ %>
      <% console.log('empty')}%>
      <div class="total-price">
        <h3>Total Price: 0</h3>
      </div>
<form method="POST" action="/checkout">
  <input type="text" name="phone" placeholder="000-000-0000" style="font-size:15px; padding:6px;">

</form>

    </section>
  </main>
  <% include partials/_footer %>
</body>

</html>
