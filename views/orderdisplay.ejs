<!DOCTYPE html>
<html lang="en">
<% include partials/_head %>

<body>
  <main class="cart">
    <section class="wrapper">
      <h1>Order ID:
        #
        <%=orderID%>
      </h1>
      <h3>
        Phone Number:
        <%=phoneNumber%>
      </h3>
      <h3>
        Order Info:
      </h3>
      <%cartItems.forEach( (dish,index)  => { %>
      <li class="menu__item" data-id="<%= dish.id %>">
        <div class="menu__item__heading">
          <h2 class="menu__item-title">
            <%= dish.name %>
          </h2>

          <span class="menu__item-price">
            $
            <%= (dish.price / 100 * qty[index].quantity).toFixed(2) %>
          </span>
        </div>
        <p class="menu__item-description">
          quanity:
          <%= qty[index].quantity %>
        </p>
        </div>
      </li>
      <%}) %>
      <div class="form-wrapper">
        <form class="form" action='/orderdisplay/<%=orderID%>' method="POST">
          <strong>How long until the order is ready:</strong>
          <select class="selectTime" name="timeTillReady">
            <option name="time" value="5">5 min</option>
            <option name="time" value="15" selected>15 min</option>
            <option name="time" value="30">30 min</option>
            <option name="time" value="cancel">Cancel</option>
          </select>
          <textarea maxlenght="50" rows="5" cols="20" placeholder="Enter a short custom message..." name="custommsg"></textarea>
          <input type="hidden" name="userphone" value="<%=phoneNumber%>">
          <button class="btn-checkout" type="submit">Submit</button>
        </form>
      </div>
    </section>
  </main>
  <% include partials/_footer %>
</body>

</html>